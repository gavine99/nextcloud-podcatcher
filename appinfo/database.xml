<?xml version="1.0" ?>
<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>

	<table>
		<name>*dbprefix*podcatcher</name>
		<declaration>
			<field>
				<name>id</name>
				<type>integer</type>
				<notnull>true</notnull>
				<autoincrement>true</autoincrement>
				<unsigned>true</unsigned>
				<primary>true</primary>
			</field>
			<field>
				<name>user_id</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>url</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>2048</length>
			</field>
			<field>
				<name>subfolder</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>256</length>
			</field>
			<field>
				<name>last_err_timestamp</name>
				<type>int</type>
				<notnull>false</notnull>
			</field>
			<field>
				<name>last_err</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>2048</length>
			</field>
			<field>
				<name>last_item</name>
				<type>integer</type>
				<notnull>false</notnull>
			</field>
		</declaration>
	</table>
</database>
